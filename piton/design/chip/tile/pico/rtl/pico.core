CAPI=2:
name: ::pico:0.1
description: Top-level PICO processor 

filesets:
    rtl:
        depend:
            - piton_include
        files:
            - picorv32.v
            - pico_reset.v

        file_type: verilogSource

targets:
    default:
        filesets: [rtl]
    pickle:
        default_tool: icarus
        filesets: [rtl]
        toplevel: [picorv32]
        tools:
            icarus:
                iverilog_options: [-g 2001 -E]

